{% extends 'base.html.twig' %}

{% block title %}{{ pizza.nom }}{% endblock %}

{% block body %}
<div class="container my-5" style="max-width: 1200px;">

    <div class="row g-4">
        <!-- Infos principales -->
        <div class="col-lg-6">
            <div class="card shadow-sm rounded-4 p-4">

                <!-- Titre et badge V√©g√©tarien -->
                <div class="d-flex align-items-center mb-3 justify-content-between">
                    <h1 class="fw-lighter text-dark mb-0 text-capitalize">{{ pizza.nom }}</h1>
                    {% if pizza.vegetarien %}
                        <span class="badge rounded-pill border border-success text-success">üåø V√©g√©tarien</span>
                    {% endif %}
                </div>

                <h3 class="text-success fw-bold" id="total-price">{{ pizza.prix }} ‚Ç¨</h3>
                <p class="text-dark">{{ pizza.description|default('Aucune description disponible.') }}</p>

                <hr style="border-top: 2px solid #28a745;">

                <!-- Quantit√© pizza -->
                <div class="d-flex align-items-center gap-2 mt-3 mb-2">
                    <button class="btn-qty btn-qty-minus" onclick="changeQuantity('qty', -1)">‚àí</button>
                    <span id="qty" class="fw-bold text-center" style="min-width: 20px;">0</span>
                    <button class="btn-qty btn-qty-plus" onclick="changeQuantity('qty', 1)">+</button>
                </div>

                <!-- Allerg√®nes -->
                {% if pizza.allergenes is defined and pizza.allergenes|length > 0 %}
                    <div class="mt-4">
                        <h5 class="fw-bold mb-2 text-dark">Allerg√®nes</h5>
                        <ul class="list-inline">
                            {% for allergene in pizza.allergenes %}
                                <li class="list-inline-item">
                                    <span class="badge rounded-pill border border-success text-success p-2">{{ allergene }}</span>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Image pizza - HAUTEUR FIXE -->
        <div class="col-lg-6">
            <div class="card shadow-sm rounded-4 overflow-hidden" style="height: 400px;">
                <img src="{{ asset('uploads/pizzas/' ~ pizza.image) }}" 
                     class="w-100 h-100" 
                     style="object-fit: cover;"
                     alt="{{ pizza.nom }}">
            </div>
        </div>
    </div>

    <!-- Suppl√©ments -->
    {% if supplements|length > 0 %}
    <div class="mt-4">
        <h4 class="fw-bold text-success mb-3">Suppl√©ments</h4>
        <div class="row g-3">
            {% for supplement in supplements %}
                <div class="col-md-3 col-sm-6">
                    <div class="card p-3 shadow-sm rounded-3 d-flex justify-content-between align-items-center gap-2">
                        <span class="text-dark fw-bold" data-price="{{ supplement.prix }}">
                            {{ supplement.nom }} 
                            <small class="text-success">({{ supplement.prix }} ‚Ç¨)</small>
                        </span>
                        <div class="d-flex align-items-center gap-2">
                            <button class="btn-qty btn-qty-minus" onclick="changeQuantity('sup-{{ supplement.id }}', -1)">‚àí</button>
                            <span id="sup-{{ supplement.id }}" class="fw-bold text-center" style="min-width:20px;">0</span>
                            <button class="btn-qty btn-qty-plus" onclick="changeQuantity('sup-{{ supplement.id }}', 1)">+</button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}
    <div class="d-flex justify-content-center mt-4">
        <button class="btn btn-success btn-lg rounded-4 shadow-sm d-flex align-items-center gap-2 px-4 py-2"
                onclick="ajouterAuPanier()">
            üõí Ajouter au panier
        </button>
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('pizza_list') }}" class="btn btn-secondary">‚Üê Retour aux pizzas</a>
    </div>
</div>

<style>
.btn-qty {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    font-size: 1.3rem;
    font-weight: bold;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: transform 0.2s, box-shadow 0.2s;
    box-shadow: 0 3px 6px rgba(0,0,0,0.2);
}
.btn-qty-plus { background-color: #28a745; color: #fff; }
.btn-qty-plus:hover { background-color: #218838; transform: scale(1.1); }
.btn-qty-minus { background-color: #6c757d; color: #fff; }
.btn-qty-minus:hover { background-color: #5a6268; transform: scale(1.1); }
.card { border: none; }
.cart-count {
    position: absolute;
    top: -3px;
    right: -5px;
    background: #28a745;
    color: white;
    font-size: 0.75rem;
    font-weight: bold;
    border-radius: 50%;
    width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 0 4px rgba(0,0,0,0.2);
    transition: transform 0.2s ease;
}
.cart-count.bump { transform: scale(1.3); }
</style>
{# 
    ‚ö†Ô∏è Script sp√©cifique √† ce template pizza.html.twig.
    Il reste ici car il utilise des variables Twig comme {{ pizza.id }}, {{ pizza.nom }} et {{ pizza.prix }}.
    D√©placer ce code dans un fichier JS externe casserait l'acc√®s √† ces donn√©es dynamiques.
    Il manipule aussi directement les √©l√©ments HTML uniques de ce template (quantit√©s, suppl√©ments, badge panier).
    Garder le script ici assure un fonctionnement fiable et simple √† maintenir.
#}
<script>
// --- Modification de la quantit√© ---
function changeQuantity(id, delta) {
    const elem = document.getElementById(id);
    if (!elem) return;
    let qty = parseInt(elem.textContent) || 0;
    qty = Math.max(0, qty + delta);
    elem.textContent = qty;
}

// --- Mise √† jour du badge panier ---
function updateCartCount(animated = false) {
    const cartCount = document.getElementById('cart-count');
    if (!cartCount) return;

    const panier = JSON.parse(localStorage.getItem('panier')) || [];
    const total = panier.reduce((sum, item) => sum + item.qty, 0);

    cartCount.textContent = total > 0 ? total : '';

    if (animated) {
        cartCount.classList.add('bump');
        setTimeout(() => cartCount.classList.remove('bump'), 200);
    }
}

// --- Ajout au panier ---
function ajouterAuPanier() {
    const qtyPizza = parseInt(document.getElementById('qty').textContent);
    if (qtyPizza === 0) { alert('Veuillez choisir une quantit√©'); return; }

    // Suppl√©ments
    const supplements = [];
    document.querySelectorAll('[id^="sup-"]').forEach(sup => {
        const qty = parseInt(sup.textContent) || 0;
        if (qty > 0) {
            const supCard = sup.closest('.card');
            const supName = supCard.querySelector('span').childNodes[0].textContent.trim();
            const supPrice = parseFloat(supCard.querySelector('span').dataset.price);
            supplements.push({ nom: supName, prix: supPrice, qty: qty });
        }
    });

    // Panier
    let panier = JSON.parse(localStorage.getItem('panier')) || [];
    panier.push({
        id: {{ pizza.id }},
        nom: "{{ pizza.nom }}",
        prix: {{ pizza.prix }},
        qty: qtyPizza,
        supplements: supplements
    });
    localStorage.setItem('panier', JSON.stringify(panier));

    // Mise √† jour badge
    updateCartCount(true);

    // Message flottant simple
    const supText = supplements.length > 0 ? supplements.map(s => `${s.nom} x${s.qty}`).join(', ') : "Aucun suppl√©ment";
    const totalSup = supplements.reduce((sum, s) => sum + s.prix * s.qty, 0);
    const total = ({{ pizza.prix }} * qtyPizza) + totalSup;

    alert(`üçï Pizza ajout√©e au panier (${qtyPizza}x)\nSuppl√©ments : ${supText}\nTotal : ${total.toFixed(2)} ‚Ç¨`);

    // R√©initialiser les quantit√©s
    document.getElementById('qty').textContent = 0;
    document.querySelectorAll('[id^="sup-"]').forEach(sup => sup.textContent = '0');
}

// --- Initialiser le badge au chargement ---
document.addEventListener('DOMContentLoaded', () => { updateCartCount(); });
</script>
{% endblock %}