{% extends 'base.html.twig' %}

{% block title %}Modifier un supplément{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center text-warning fw-bold mb-4">✏️ Modifier le supplément</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success text-center">{{ message }}</div>
    {% endfor %}

    <div class="card shadow-lg p-4">
        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.nom, 'Nom du supplément', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Ex : Burrata'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.prix, 'Prix (€)', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.prix, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Ex : 1.50'}}) }}
            </div>

            <div class="d-flex justify-content-center gap-3 mt-4">
                <a href="{{ path('admin_supplements_index') }}" class="btn btn-secondary btn-lg">Annuler</a>
                <button type="submit" class="btn btn-warning btn-lg">Modifier</button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}